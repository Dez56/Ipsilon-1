<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ipsilon_1.Views.conf1gs"
             Title="conf1gs">
    <VerticalStackLayout>
        <Label 
            Text="Dirección del server"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        
        <Entry x:Name="entryDireccion"
           Placeholder="Dirección del servidor"
           Text="{Binding DireccionServidor}"
           Keyboard="Url" />

        <Button Text="Guardar dirección"
            Clicked="GuardarDireccion_Clicked" />

    </VerticalStackLayout>
</ContentPage>