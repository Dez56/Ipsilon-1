<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ipsilon_1.Views.movint.Consultas"
             Title="Consultas">
    <VerticalStackLayout>
        
        <!--    Botones de Navegación   -->

        <HorizontalStackLayout HorizontalOptions="Center" Spacing="20">
            <Button 
                x:Name="nigga1"
                Text="Usuarios" 
                Clicked="nigga1click"
                HorizontalOptions="Center"/>
            <Button 
                x:Name="nigga2"
                Text="Paquetes" 
                Clicked="nigga2click"
                HorizontalOptions="Center"/>
        </HorizontalStackLayout>

        <!--    Tablas de impresión de consultas    -->
        
        <!--    Tabla para imprimir a los usuarios    -->
        
        <StackLayout x:Name="uno" IsVisible="False">
            <Label 
                Text="Paquetes"
                VerticalOptions="Start" 
                HorizontalOptions="Center" />

            <HorizontalStackLayout>
                <Button 
                    x:Name="RevealUserAdd"
                    Text="Agregar" 
                    Clicked="RevealUserAdd"
                    HorizontalOptions="Center"/>
            </HorizontalStackLayout>
            
            <!--    Encabezado de tabla   -->

            <HorizontalStackLayout>
                <Label Text="Id" />
                <Label Text="Nombre" />
                <Label Text="Contraseña" />
            </HorizontalStackLayout>

            <CollectionView x:Name="DataCollectionView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Id}" />
                            <Label Grid.Column="1" Text="{Binding Nombre}" />
                            <Label Grid.Column="2" Text="{Binding Contrasena}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>

        <!--    Tabla de consulta paquetes   -->

        <StackLayout x:Name="tua" IsVisible="False">
            <Label 
            Text="Usuarios"
            VerticalOptions="Start" 
            HorizontalOptions="Center" />
            <CollectionView x:Name="sasas">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Text="{Binding Id}" />
                            <Label Grid.Column="1" Text="{Binding Repártidor}" />
                            <Label Grid.Column="2" Text="{Binding Codigo}" />
                            <Label Grid.Column="3" Text="{Binding Estado}" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
        
        <!--    Formularios para agregar nuevos regisreos    -->
        
        <!---   Formulario usuario   -->

        <StackLayout x:Name="AgregarGrupoUser" IsVisible="False">
            <Label Text="Agregar Nuevo Usuario" 
                   FontSize="Large" 
                   HorizontalOptions="Center" />

            <Entry x:Name="NombreEntry" 
                   Placeholder="Nombre" 
                   Margin="0,10" />

            <Entry x:Name="ContrasenaEntry" 
                   Placeholder="Contraseña" 
                   IsPassword="True" 
                   Margin="0,10" />

            <Button Text="Agregar Usuario" 
                    Clicked="OnAgregarUsuarioClicked" 
                    HorizontalOptions="Center" 
                    Margin="0,20" />

            <Label x:Name="ResultadoLabel" 
                   Text="" 
                   TextColor="Green" 
                   HorizontalOptions="Center" />
        </StackLayout> 

        <!---   Formulario paquetes   -->

        <!--    Formularios para actualizar registros    -->

        <!---   Formulario usuario   -->

        <!---   Formulario paquetes   -->
    </VerticalStackLayout>

</ContentPage>